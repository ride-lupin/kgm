{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@*": [
        "./*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@type/*": [
        "./type/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@helper/*": [
        "./helper/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lint-staged.config.js",
    "out/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
